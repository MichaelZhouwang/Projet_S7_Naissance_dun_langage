package architecture;

public class Horloge {
	private int date;
	
	public Horloge() {
		date = 0;
	}
	
	public int dateNulle() {
		return 0;
	}
	
	public int dateActuelle() {
		return date;
	}
	
	public void avancerDate() {
		date++;
	}
	
	public boolean aDepasseDate(int date) {
		return this.date > date; 
	}
}